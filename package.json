{
  "name": "ts-template",
  "version": "1.0.0",
  "author": "Julian Cadenas",
  "description": "This is a template for TypeScript projects with frontend and backend setup, including ESLint and Prettier configurations.",
  "license": "ISC",
  "keywords": [],
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "pnpm": "10.15.1"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "dev-front": "cd frontend && pnpm dev",
    "dev-back": "cd backend && pnpm dev",
    "lint:all": "eslint . --ext .ts,.tsx.js,.jsx --config eslint.config.mts",
    "lint:frontend": "eslint frontend --ext .ts,.tsx --config eslint.config.mts",
    "lint:backend": "eslint backend --ext .ts,.js --config eslint.config.mts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --config eslint.config.mts"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.42.0"
  }
}
